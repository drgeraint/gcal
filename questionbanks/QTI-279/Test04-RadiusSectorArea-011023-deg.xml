                                                <m:mtext>Area of sector</m:mtext>
                                            </m:mrow>
                                        </m:mfrac>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mfrac>
                                            <m:mrow>
                                                <m:mn>360</m:mn>
                                            </m:mrow>
                                            <m:mrow>
                                                <m:mtext>Angle</m:mtext>
                                            </m:mrow>
                                        </m:mfrac>
                                    </m:mtd>
                                </m:mtr>
                                <m:mtr>
                                    <m:mtd columnalign="right">
                                        <m:mtext>Area of circle</m:mtext>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mfrac>
                                            <m:mrow>
                                                <m:mn>360</m:mn>
                                            </m:mrow>
                                            <m:mrow>
                                                <m:mi>iAngle</m:mi>
                                            </m:mrow>
                                        </m:mfrac>
                                        <m:mo>Ã—</m:mo>
                                        <m:mtext>Area of sector</m:mtext>
                                    </m:mtd>
                                </m:mtr>
                                <m:mtr>
                                    <m:mtd columnalign="right">
                                        <m:mi>Ï€</m:mi>
                                        <m:msup>
                                            <m:mi>r</m:mi>
                                            <m:mn>2</m:mn>
                                        </m:msup>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mfrac>
                                            <m:mrow>
                                                <m:mn>360</m:mn>
                                                <m:mo>Ã—</m:mo>
                                                <m:mi>iArea</m:mi>
                                            </m:mrow>
                                            <m:mrow>
                                                <m:mi>iAngle</m:mi>
                                            </m:mrow>
                                        </m:mfrac>
                                    </m:mtd>
                                </m:mtr>
                                <m:mtr>
                                    <m:mtd columnalign="right">
                                        <m:msup>
                                            <m:mi>r</m:mi>
                                            <m:mn>2</m:mn>
                                        </m:msup>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mfrac>
                                            <m:mrow>
                                                <m:mn>360</m:mn>
                                                <m:mo>Ã—</m:mo>
                                                <m:mi>iArea</m:mi>
                                            </m:mrow>
                                            <m:mrow>
                                                <m:mi>iAngle</m:mi>
                                                <m:mo>Ã—</m:mo>
                                                <m:mi>Ï€</m:mi>
                                            </m:mrow>
                                        </m:mfrac>
                                    </m:mtd>
                                </m:mtr>
                                <m:mtr>
                                    <m:mtd columnalign="right">
                                        <m:msup>
                                            <m:mi>r</m:mi>
                                            <m:mn>2</m:mn>
                                        </m:msup>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mi>frSq</m:mi>
                                    </m:mtd>
                                </m:mtr>
                                <m:mtr>
                                    <m:mtd columnalign="right">
                                        <m:mi>r</m:mi>
                                    </m:mtd>
                                    <m:mtd columnalign="center">
                                        <m:mo>=</m:mo>
                                    </m:mtd>
                                    <m:mtd columnalign="left">
                                        <m:mi>fAns</m:mi>
                                        <m:mi>sMeasure</m:mi>
