			<customOperator class="org.qtitools.mathassess.ScriptRule" ma:syntax="text/x-maxima">
				<baseValue baseType="string">
					<![CDATA[
            mQues: ev(iA*x+iB*y,simp);
            mRHS: ev(-iA*x/iB+iC,simp);
			mPara: ev(-iA/iB,simp);
			mInvPara: ev(-iB/iA,simp);
			mInvPerp: ev(iA/iB,simp);
			mPerp: ev(iB/iA,simp);
			mX: x;
			]]>
