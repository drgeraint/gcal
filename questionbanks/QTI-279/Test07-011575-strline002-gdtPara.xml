 ob23: is(is(equal(RESPONSE2,iC))=true);
 ob24: is(is(equal(RESPONSE2,mPara))=true);
 
]]></baseValue>
		                    </customOperator>
		                </setOutcomeValue>
		                <setOutcomeValue identifier="oPInput1">
